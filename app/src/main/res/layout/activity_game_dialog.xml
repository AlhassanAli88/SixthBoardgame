<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are You Ready?"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/opponentsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username vs Opponents"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_below="@id/titleTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/textButtonContinue"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:text="Continue"
        android:background="@drawable/gradient_button_green"
        android:padding="@dimen/margin_small"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_below="@id/opponentsTextView"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/inter_semibold"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/textButtonCancel"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:text="Cancel"
        android:textColor="@color/white"
        android:background="@drawable/gradient_button_red"
        android:layout_below="@id/opponentsTextView"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/inter_semibold"
        android:layout_alignParentStart="true"/>
</RelativeLayout>
