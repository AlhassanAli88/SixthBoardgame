<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity"
    android:background="@drawable/wooden_background"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_margin="@dimen/margin_large">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textHighscore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/highscore"
                android:textColor="@color/white"
                android:fontFamily="@font/inter_semibold"
                android:textSize="@dimen/heading_small"
                android:shadowColor="@color/orange_light"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="8"/>

            <TextView
                android:id="@+id/textViewExclamation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/exclamation_mark_with_front_space"
                android:textColor="@color/orange_light"
                android:fontFamily="@font/inter_semibold"
                android:textSize="@dimen/heading_small"
                android:shadowColor="@color/orange_light"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="8"/>

        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewHighscore"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_medium" />

</LinearLayout>