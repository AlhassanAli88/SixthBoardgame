<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/width_large"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/margin_xl"
    android:elevation="@dimen/margin_xxs"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/inter_semibold"
        android:text="@string/pop_up_invite"
        android:textColor="@color/orange_light"
        android:textSize="@dimen/heading_small"
        android:shadowColor="@color/orange_light"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="8" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_large"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/btn_no"
            android:layout_width="@dimen/height_view_small"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/elevation_small"
            android:minWidth="100dp"
            android:background="@drawable/gradient_button_red"
            android:fontFamily="@font/inter_semibold"
            android:gravity="center"
            android:text="@string/no"
            android:textColor="@color/white"
            android:padding="@dimen/elevation_small" />

        <TextView
            android:id="@+id/btn_yes"
            android:layout_width="@dimen/height_view_small"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:minWidth="100dp"
            android:background="@drawable/gradient_button_green"
            android:fontFamily="@font/inter_semibold"
            android:gravity="center"
            android:text="@string/yes"
            android:textColor="@color/white"
            android:padding="@dimen/elevation_small" />
    </LinearLayout>

</LinearLayout>

